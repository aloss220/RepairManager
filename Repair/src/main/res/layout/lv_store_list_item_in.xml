<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_w"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/relativelayout_bg2" >

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_goods_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_goods_count"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="2"
                android:text=" "
                android:textColor="@color/text_color_bk"
                android:textSize="@dimen/common_text_size14" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_goods_info"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text=""
                android:textColor="@color/text_color_bk"
                android:textSize="@dimen/common_text_size14" />

            <TextView
                android:id="@+id/tv_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_goods_price"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text=""
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_g"
                android:textSize="@dimen/common_text_size14" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/background_g" />

</LinearLayout>